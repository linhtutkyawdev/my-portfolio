---
import { LINKS, NAME, DESCRIPTION } from "../constants";
---

<header id="home" class="header-area">
  <div class="navigation fixed-top" style="font-family: 'Commic Sans MS';">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <nav class="navbar navbar-expand-lg">
            <a
              class="navbar-brand"
              href="/"
              style="color: #754ef9; font-weight: 600;"
            >
              <img
                src="assets/images/profile.png"
                alt="Logo"
                style="width: 3.5rem; height:3.5rem; margin-right: 1rem;"
              />
              {NAME}
            </a>
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="toggler-icon"></span>
              <span class="toggler-icon"></span>
              <span class="toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                {
                  LINKS.map((l) => (
                    <li class="nav-item active">
                      <a class="page-scroll" href={`#${l.toLowerCase()}`}>
                        {l}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <div id="parallax" class="header-content d-flex align-items-center">
    <div class="header-shape shape-one layer" data-depth="0.10">
      <img src="assets/images/banner/shape/shape-1.png" alt="Shape" />
    </div>
    <div class="header-shape shape-tow layer" data-depth="0.30">
      <img src="assets/images/banner/shape/shape-2.png" alt="Shape" />
    </div>
    <div class="header-shape shape-three layer" data-depth="0.40">
      <img src="assets/images/banner/shape/shape-3.png" alt="Shape" />
    </div>
    <div class="header-shape shape-fore layer" data-depth="0.60">
      <img src="assets/images/banner/shape/shape-2.png" alt="Shape" />
    </div>
    <div class="header-shape shape-five layer" data-depth="0.20">
      <img src="assets/images/banner/shape/shape-1.png" alt="Shape" />
    </div>
    <div class="header-shape shape-six layer" data-depth="0.15">
      <img src="assets/images/banner/shape/shape-4.png" alt="Shape" />
    </div>
    <div class="header-shape shape-seven layer" data-depth="0.50">
      <img src="assets/images/banner/shape/shape-5.png" alt="Shape" />
    </div>
    <div class="header-shape shape-eight layer" data-depth="0.40">
      <img src="assets/images/banner/shape/shape-3.png" alt="Shape" />
    </div>
    <div class="header-shape shape-nine layer" data-depth="0.20">
      <img src="assets/images/banner/shape/shape-6.png" alt="Shape" />
    </div>
    <div class="header-shape shape-ten layer" data-depth="0.30">
      <img src="assets/images/banner/shape/shape-3.png" alt="Shape" />
    </div>

    <div class="container">
      <div class="row align-items-center">
        <div class="col-xl-5 col-lg-6">
          <div class="header-content-right">
            <h4 class="sub-title" style="font-family: 'Commic Sans MS';">
              Hello, Iâ€™m
            </h4>
            <h1 class="title" style="font-family: 'Commic Sans MS';">{NAME}</h1>
            <p>{DESCRIPTION}</p>
            <a class="main-btn" href={`#${LINKS[3].toLowerCase()}`}
              >Check my Work</a
            >
          </div>
        </div>
        <div class="col-lg-6 offset-xl-1">
          <div class="header-image d-none d-lg-block">
            <img
              src="assets/images/profile-removebg.png"
              width="426"
              height="642"
              style="object-fit: cover; margin-bottom:3rem;"
              alt="hero"
            />
          </div>
        </div>
      </div>
    </div>
    <div class="header-social">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="header-social-icon">
              <ul>
                <li>
                  <a href="https://github.com/linhtutkyawdev"
                    ><i class="lni lni-sm lni-github-original"></i></a
